<p id="notice"><%= notice %></p>

<div class="index-container">
  <div class="grid_1">
    <%= link_to article_path(@top_article.id) do %>
      <%= image_tag @top_article.image.downcase, class:'cover-img' %>
          <div class="top-cont">
            <h3 class="index-title">
              <%= @top_article.title %>
            </h3>
          </div>
    <% end %>
  </div>
</div>


<div class="cards-holder">
  <% @home_articles.each do |c| %>
  <%= link_to category_path(c.id) do %>
    <% unless c.articles.last.nil? %>
      <div class="grid_2">
        <%= image_tag c.articles.last.image %>
            <h3 class="index-title sec-cont">
              <%= c.name %>
            </h3>
          <% end %>
      </div>
    <% end %>
  <% end %>
</div>


<ul>
  <% @articles.each do | article | %>
  <li>
    <span><%= link_to(article.title, article_path(article.id)) %></span><br>
    <span><%= article.text %></span><br>
    <span><%= article.author.name %></span><br>
    <span><%= article.category.name %></span><br>
  </li>
  <% end %>
</ul>