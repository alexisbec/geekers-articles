<p id="notice"><%= notice %></p>

<div class="grid-cont">
  <div class="grid_1">
    <%= link_to article_path(@top_article.id) do %>
      <%= image_tag @top_article.image.downcase, class:'cover-img full' %>
          <div class="top-cont">
            <h3 class="index-title">
              <%= @top_article.title %>
            </h3>
          </div>
    <% end %>
  </div>
  <div class="grid_2">
    <h3 class="index-title sec-cont">
      <%= @categories.find(1).name %>
    </h3>
  </div>
  <div class="grid_3">
    <h3 class="index-title third-cont">
      <%= @categories.find(2).name %>
    </h3>
  </div>
  <div class="grid_4">
    <h3 class="index-title third-cont">
      <%= @categories.find(3).name %>
    </h3>
  </div>
  <div class="grid_5">
    <h3 class="index-title third-cont">
      <%= @categories.find(4).name %>
    </h3>
  </div>
  <div class="grid_6">
    <h3 class="index-title third-cont">
      <%= @categories.find(5).name %>
    </h3>
  </div>
</div>


<div>
  <% @categories.each do |c| %>
    <% if !c.articles.last.nil? %>
      <div class="my-card ">
        <%= link_to article_path(c.articles.last.id) do %>
            <h3 class="my-card-cat">
              <%= c.name %>
            </h3>
            <h4>
              <%= c.articles.last.title %>
            </h4>
          <% end %>
      </div>
    <% end %>
  <% end %>
</div>

<ul>
  <% @articles.each do | article | %>
  <li>
    <span><%= link_to(article.title, article_path(article.id)) %></span><br>
    <span><%= article.text %></span><br>
    <span><%= article.author.name %></span><br>
    <span><%= article.category.name %></span><br>
    <span><%= article.image %></span><br>
  </li>
  <% end %>
</ul>