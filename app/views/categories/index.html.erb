<p id="notice"><%= notice %></p>

<h1 class="title">All Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do | category | %>
      <tr>
        <td><%= link_to category.name, category_path(category.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>