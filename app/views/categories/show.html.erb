<h2 class="title">
  <%= @category.name %>
</h2>

<div class="cat-show-body">
  <ul class="categories-ul">
  <% @articles.each do | article | %>
    <li class="categories-li">
      <span class="art-title"><%= article.title %></span>
      <span class="art-author">Written by: <%= article.author.name %></span>
      <%= link_to "Watch all the article", article_path(article.id), class: 'btn-1' %>
    </li>
  <% end %>
  </ul>
</div>
